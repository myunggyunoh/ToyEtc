<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ocr.OcrActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gallery"/>

            <ImageView
                android:id="@+id/img_ocr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_ocr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ocr"/>

            <TextView
                android:id="@+id/text_ocr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여기에 ocr 결과 출력"
                android:textSize="15dp"
                android:textColor="#e22e"
                android:background="#fff"
                />

            <Button
                android:id="@+id/btn_translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="translation"/>

            <TextView
                android:id="@+id/text_translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여기에 translation 결과 출력"
                android:textSize="15dp"
                android:textColor="#e22e"
                android:background="#fff"
                />

        </LinearLayout>
    </ScrollView>
</layout>

